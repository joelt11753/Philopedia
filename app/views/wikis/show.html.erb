  <div class="row">
    <div class="col-10">
      <h1><%= @wiki.title %>
        <small class="text-muted"><%= @wiki.user.name %></small>
      </h1>
    </div>
    <div class="col-2">
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger float-right', data: { confirm: 'Are you sure you want to delete this article?' } %>
      <%= link_to "Edit", edit_wiki_path, class: 'btn btn-success float-right mr-1' %>
    </div>
  </div>

  <p><%= @wiki.body %></p>